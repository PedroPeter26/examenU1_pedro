<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.personalcontact"
    >

    <TextView
        android:id="@+id/tituloxd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Contacto:"
        android:textSize="42dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/nombre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloxd"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolorem satam y más palabras en latín jajaja"
        android:textSize="26dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre2"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>